header.header-feed
	.container
		section.headertop.clearfix
			.btn-showmenu.d-xl-none <i class="fa fa-bars" aria-hidden="true"></i>
			.overlay.d-xl-none
			.sitelogo
				a(href="index.html")
					img(src="img/logo-feed.png", alt="")
			.colright
				.toptool.clearfix
					.sitelink.dropdown.show
						a.dropdown-toggle(href='index.html', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
							| C.P. Việt Nam
						.dropdown-menu(aria-labelledby='dropdownMenuLink')
							//- a.dropdown-item(href='index.html' target='_blank') C.P. Việt Nam
							a.dropdown-item(href='index-feed.html' target='_blank') C.P. Feed
							a.dropdown-item(href='index-farm.html' target='_blank') C.P. Farm
							a.dropdown-item(href='index-htd.html' target='_blank') C.P. Hành Trình Đỏ
							a.dropdown-item(href='index-food.html' target='_blank') C.P. Food
					.search.clearfix
						.searchtoggle.d-md-none <i class="fa fa-search" aria-hidden="true"></i>
						.searchwrap
							.searchbox
								input(type="text" placeholder="Tìm kiếm...")
								button.searchbutton <i class="fa fa-search" aria-hidden="true"></i>
					.language.clearfix
						a(href="#")
							img(src="img/vn.png", alt="")
						a(href="#")
							img(src="img/en.png", alt="")
		section.headermenu.clearfix

			nav.menu.clearfix
				.menulogo.d-xl-none
					.sitelogo
						a(href="#")
							img(src="img/logo-feed.png", alt="")
				.menucontent
					.menuwrap
						ul.menulink
							li.active
								a(href="#!") Trang chủ
							li
								a(href="#!") Giới thiệu
							li
								a(href="#!") Sản phẩm
							li
								a(href="#!") Chứng nhận
							li
								a(href="#!") Liên hệ
					.social
						a(href="#!") <i class="fa fa-facebook" aria-hidden="true"></i>
						a(href="#!") <i class="fa fa-twitter" aria-hidden="true"></i>
						a(href="#!") <i class="fa fa-youtube-play" aria-hidden="true"></i>
						a(href="#!") <i class="fa fa-instagram" aria-hidden="true"></i>
